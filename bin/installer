#!/bin/sh
set -x

fail() {
    echo $1 1>&2
    echo "Usage: $0 [install|uninstall]" 1>&2
    exit 1
}

if [ $# -lt 1 ] ; then
    fail "Invalid number of arguments."
fi

if [ $(/usr/bin/id -u) -ne 0 ] ; then
    fail "Impossible to prepare the system without root privileges."
fi

if [ $(/bin/uname) != "Linux" ] ; then
    fail "Impossible to prepare another operating system than Linux."
fi

case $1 in
    install )
        curl -sLo /usr/local/sbin/tincd "https://github.com/timonier/tinc/raw/master/bin/tincd"
        chmod +x /usr/local/sbin/tincd
    ;;

    uninstall )
        rm /usr/local/sbin/tincd
    ;;

    * )
        fail "Argument $1 is invalid."
esac
